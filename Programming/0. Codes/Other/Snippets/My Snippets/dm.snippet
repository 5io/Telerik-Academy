<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Public Decimal Property</Title>
      <Author>md5sum</Author>
      <Description>Creates a private decimal with a public decimal property</Description>
      <HelpUrl />
      <SnippetTypes />
      <Keywords />
      <Shortcut>pm</Shortcut>
    </Header>
    <Snippet>
      <References />
      <Imports />
      <Declarations>
        <Literal Editable="true">
          <ID>varName</ID>
          <Type>decimal</Type>
          <ToolTip>The name of the variable.</ToolTip>
          <Default>VarName</Default>
          <Function />
        </Literal>
      </Declarations>
      <Code Language="csharp" Kind="method decl" Delimiter="$"><![CDATA[private decimal _$varName$;
    public decimal $varName$
    {
        get
        {
            return _$varName$;
        }
        set
        {
            $varName$ = value;
        }
    }]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>