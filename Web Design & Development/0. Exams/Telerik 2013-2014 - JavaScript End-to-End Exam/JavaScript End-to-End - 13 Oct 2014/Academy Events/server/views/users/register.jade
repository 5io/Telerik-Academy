extends ../shared/layout

block main-content
    .row
        .col-md-3
        .col-md-6
            form.form-horizontal(method="post")
                h2.form-sign-in-heading Please sign up
                input(id="username" class="form-control" type="text" name="username" placeholder="Username", required)
                input(id="email" class="form-control" type="email" name="email" placeholder="Email", required)
                br
                input(id="firstName" class="form-control" type="text" name="firstName" placeholder="First name", required)
                input(id="lastName" class="form-control" type="text" name="lastName" placeholder="Last name", required)
                input(id="phoneNumber" class="form-control" type="text" name="phoneNumber" placeholder="Phone number (optional)")
                br
                select.form-control(name="initiatives", multiple)
                    each initiative in initiatives
                        option(value=initiative._id) #{initiative.name} - Season #{initiative.season}
                br
                input(id="password" class="form-control" type="password" name="password" placeholder="Password", required)
                input(id="password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password", required)
                input(type="submit" class="btn btn-md btn-primary btn-block" value="Sign up")