@model IEnumerable<ForumSystem.Web.ViewModels.PageableFeedbackList.ListFeedbackViewModel>
@{
    ViewBag.Title = "Feedbacks";
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Content</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.AuthorName</td>
                    <td>@feedback.Title</td>
                    <td>@feedback.Content</td>
                    <td>@feedback.CreatedOn.ToString("mm/dd/yyyy HH:MM:ss")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12 text-center">
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="">
                        <a href="?page=@((int)ViewBag.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                
                @for (int i = 1; i < (int)ViewBag.NumberOfPages + 1; i++)
                {
                    if (i == (int)ViewBag.CurrentPage)
                    {
                        <li class="disabled">
                            <a href="?page=@i">@i</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="?page=@i">@i</a>
                        </li>
                    }
                }

                @if (ViewBag.CurrentPage < ViewBag.NumberOfPages)
                {
                    <li><a href="?page=@((int)ViewBag.CurrentPage + 1)"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
                }
            </ul>
        </div>
        <div class="col-md-12 text-center">
            Page @ViewBag.CurrentPage of @ViewBag.NumberOfPages
        </div>
    </div>
</div>